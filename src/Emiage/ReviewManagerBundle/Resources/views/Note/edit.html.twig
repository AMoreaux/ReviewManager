{% extends 'EmiageReviewManagerBundle::layout.html.twig' %}

{% block content -%}
    <h1>Modification</h1>
    {{ form_start(edit_form) }}
    {% if is_granted('ROLE_ADMIN') %}
        {{ form_row(edit_form.file) }}
        {{ form_row(edit_form.student, { 'attr': { 'class': 'form-control' }}) }}
        {{ form_row(edit_form.module, { 'attr': { 'class': 'form-control' }}) }}
    {% endif %}
    {% if is_granted('ROLE_SUPER_ADMIN') %}
        {{ form_row(edit_form.student, { 'attr': { 'class': 'form-control' }}) }}
        {{ form_row(edit_form.module, { 'attr': { 'class': 'form-control' }}) }}
    {% endif %}
    {% if is_granted('ROLE_PROF') %}
        {{ form_row(edit_form.note, { 'attr': { 'class': 'form-control' }}) }}
    {% endif %}
    {{ form_row(edit_form.submit, { 'attr': { 'class': 'btn btn-success' }}) }}
    {{ form_rest(edit_form) }}
{% endblock %}
