{% extends 'EmiageReviewManagerBundle::layout.html.twig' %}

{% block content -%}
    <h1>Module list</h1>

    <form class="input-group input-group-lg" action="{{ path('module') }}" method="post">
        <span class="input-group-addon">
            {{ form_widget(form) }}
            <input type="submit" value="Rechercher" />
        </span>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Code</th>
                <th>Responsable</th>
                <th>file</th>
                {% if is_granted('ROLE_ADMIN') %}
                    <th>Actions</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('module_show', { 'id': entity.id }) }}" class="btn btn-default">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.code }}</td>
                {% if entity.responsable is not null %}
                    <td>{{ entity.responsable.username }}</td>
                {% else %}
                    <td>empty</td>
                {% endif %}
                {% if entity.path is not null %}
                    <td><a href="{{ path('module_download', { 'slug': entity.path }) }}"> {{ entity.path }} </a></td>
                {% elseif is_granted('username') == entity.responsable.username %}
                    <td><a href="{{ path('module_edit', { 'id': entity.id }) }}" class="btn btn-default">(Ajouter le contenu)</a></td>
                {% else %}
                    <td> </td>
                {% endif %}
                <td>
                    {% if is_granted('ROLE_ADMIN') %}
                        <ul>
                            <li>
                                <a href="{{ path('module_show', { 'id': entity.id }) }}" class="btn btn-default">show</a>
                                <a href="{{ path('module_edit', { 'id': entity.id }) }}" class="btn btn-default">edit</a>
                                <a href="{{ path('module_delete', { 'id': entity.id }) }}" class="btn btn-default">delete</a>
                            </li>
                        </ul>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('module_new') }}" class="btn btn-primary">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
