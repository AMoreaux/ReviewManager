{% extends 'EmiageReviewManagerBundle::layout.html.twig' %}

{% block content -%}
    <h1>ReviewCenter list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('reviewcenter_show', { 'id': entity.id }) }}" class="btn btn-default">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>
                <ul  class="btn-group">
                    <li>
                        <a href="{{ path('reviewcenter_show', { 'id': entity.id }) }}" class="btn btn-default">show</a>
                        <a href="{{ path('reviewcenter_edit', { 'id': entity.id }) }}" class="btn btn-default">edit</a>
                        <a href="{{ path('reviewcenter_delete', { 'id': entity.id }) }}" class="btn btn-default">delete</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('reviewcenter_new') }}" class="btn btn-primary">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
