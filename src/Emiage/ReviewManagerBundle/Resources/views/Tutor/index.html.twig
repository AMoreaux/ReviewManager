{% extends 'EmiageReviewManagerBundle::layout.html.twig' %}

{% block content -%}
    <h1>Tutor list</h1>

    {% if entities.haveToPaginate %}
        {{ pagerfanta(entities, 'default', {'tutor': 'page'}) }}
    {% endif %}

    {% if form is defined %}
        <form class="input-group input-group-lg" action="{{ path('tutor') }}" method="post">
            <span class="input-group-addon">
                {{ form_widget(form) }}
                <input type="submit" value="Rechercher" />
            </span>
        </form>
    {% endif %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>User</th>
                <th>modules</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities.currentPageResults %}
            <tr>
                <td><a href="{{ path('tutor_show', { 'id': entity.id }) }}" class="btn btn-default">{{ entity.id }}</a></td>
                <td>{{ entity.user.username }}</td>
                <td>
                    <ul>
                        {% for module in entity.modules %}
                            <li>{{ module.code }} {{ module.name }}</li>
                        {% endfor %}
                    </ul>
                </td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('tutor_show', { 'id': entity.id }) }}" class="btn btn-default">show</a>
                        <a href="{{ path('tutor_edit', { 'id': entity.id }) }}" class="btn btn-default">edit</a>
                        <a href="{{ path('tutor_delete', { 'id': entity.id }) }}" class="btn btn-default">delete</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('tutor_new') }}" class="btn btn-primary">
                Create a new entry
            </a>
        </li>
    </ul>

    {% if entities.haveToPaginate %}
        {{ pagerfanta(entities, 'default', {'tutor': 'page'}) }}
    {% endif %}

    {% endblock %}
