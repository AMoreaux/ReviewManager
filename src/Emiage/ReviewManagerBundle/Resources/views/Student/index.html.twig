{% extends 'EmiageReviewManagerBundle::layout.html.twig' %}

{% block content -%}
    <h1>Student list</h1>

    <form class="input-group input-group-lg" action="{{ path('student') }}" method="post">
        <span class="input-group-addon">
            {{ form_widget(form) }}
            <input type="submit" value="Rechercher" />
        </span>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Login</th>
                <th>Mail</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('student_show', { 'id': entity.id }) }}" class="btn btn-default">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.login }}</td>
                <td>{{ entity.mail }}</td>
                <td>{{ entity.phone }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('student_show', { 'id': entity.id }) }}" class="btn btn-default">show</a>
                        <a href="{{ path('student_edit', { 'id': entity.id }) }}" class="btn btn-default">edit</a>
                        <a href="{{ path('student_delete', { 'id': entity.id }) }}" class="btn btn-default">delete</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('student_new') }}" class="btn btn-primary">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
