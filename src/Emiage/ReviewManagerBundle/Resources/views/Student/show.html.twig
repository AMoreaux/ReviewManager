{% extends 'EmiageReviewManagerBundle::layout.html.twig' %}

{% block content -%}
    <h1>Student</h1>

    <table class="table">
        <tbody>
            {% if is_granted ('ROLE_SUPER_ADMIN') %}
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
            {% endif %}
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>{{ entity.login }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ entity.mail }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ entity.phone }}</td>
            </tr>
           <tr>
                <th>Module</th>
                <td>
                    <form action="{{ path('module') }}" >
                        <input type="submit" value="Ajouter des modules" />
                    </form>
                    <ul>
                       {% for module in entity.modules %}
                        <li><a href="{{ path('examen_inscription', { 'id': module.id }) }}">{{ module.code }} / {{ module.name }}</a></li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('student_edit', { 'id': entity.id }) }}" class="btn btn-default">
                Edit
            </a>
        </li>
        {% if is_granted ('ROLE_ADMIN') %}
            <li>
                <a href="{{ path('student_delete', { 'id': entity.id }) }}" class="btn btn-default">
                    Delete
                </a>
            </li>
        {% endif %}
    </ul>
{% endblock %}
