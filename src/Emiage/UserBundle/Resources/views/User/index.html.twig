{% extends 'EmiageReviewManagerBundle::layout.html.twig' %}

{% block content -%}
    <h1>User list</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Roles</th>
                {% if is_granted('ROLE_ADMIN')  %}
                    <th>Actions</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.username }}</a></td>
                <td>{{ entity.email }}</td>
                <td>
                    <ul>
                        {% for role in entity.roles %}
                            <li>{{ role }}</li>
                        {% endfor %}
                    </ul>
                    </td>
                {% if is_granted('ROLE_ADMIN')  %}
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('user_edit', { 'id': entity.id }) }}" class="btn btn-default">edit</a>
                            </li>
                            <li>
                                <a href="{{ path('user_delete', { 'id': entity.id }) }}" class="btn btn-default" onclick="return confirm('Supprimer ce user ?');">delete</a>
                            </li>
                        </ul>
                    </td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endblock %}
